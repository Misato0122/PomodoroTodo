<tr id="task-<%= task.id%>">
  <th><%= check_box_tag :task %></th>
  <td><%= task.content %></td>
  <td><%= task.deadline %></td>
  <td><%= task.pomodoros.count %>回</td>
  <td><%= link_to 'スタート', timer_task_path(task), class: 'btn btn-primary'%></td>
  <td><%= link_to '削除', task_path(task), method: :delete, class: 'btn btn-danger', data: { confirm: '削除してよろしいですか？' } %></td>
  <td></td>
</tr>



