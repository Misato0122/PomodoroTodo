<tr id="task-<%= task.id%>">
  <th><%= check_box_tag :task %></th>
  <td><%= link_to task.content, task_path(task) %></td>
  <td><%= task.deadline %></td>
  <td><%= task.pomodoros.count %>回</td>
  <td><%= task.pomodoros.where(created_at: Time.zone.now.all_day).count%>回</td>
  <td><%= link_to 'スタート', timer_task_path(task), class: 'btn btn-primary'%></td>
  <td><%= link_to '編集', edit_task_path(task), class: 'btn btn-info' %></td>
  <td><%= link_to '削除', task_path(task), method: :delete, class: 'btn btn-danger', data: { confirm: "タスクを削除しますか？" } %></td>
  <td></td>
</tr>



