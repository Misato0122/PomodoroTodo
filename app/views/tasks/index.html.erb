<h1>Todoリスト</h1>

<div>
  <p>本日の実績 <%= current_user.pomodoros.where(created_at: Time.zone.now.all_day).count%>回</p>
</div>

<!-- タスク新規作成モーダルボタン -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">タスク新規作成</button>

<!-- モーダル -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">タスク新規作成</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with model: @task, local: true do |f|%>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :content, Task.human_attribute_name(:content) %>
            <%= f.text_field :content, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :deadline, Task.human_attribute_name(:deadline) %>
            <%= f.date_field :deadline, class: 'form-control date-picker' %>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit 'タスク登録', class: 'btn btn-primary' %>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">キャンセル</button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<table class='table js-table-task'>
  <thead>
    <tr>
      <th></th>
      <th><%= Task.human_attribute_name(:content) %></th>
      <th><%= Task.human_attribute_name(:deadline) %></th>
      <th>合計ポモドーロ数</th>
      <th>本日のポモドーロ数</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if @tasks.present?%>
    <%= render @tasks %>
    <% else %>
    <td>タスクがありません</td>
    <% end %>
  </tbody>
</table>